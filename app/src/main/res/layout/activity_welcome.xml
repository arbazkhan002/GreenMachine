<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="#efeff2"
    android:orientation="vertical">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        >
    </include>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/slogan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_slogan"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:textSize="85px"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:background="@layout/welcome_button"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"

        android:layout_marginTop="33dp"
        android:id="@+id/linearLayout2"
        >
        <ImageView
            android:layout_width="75px"
            android:layout_height="75px"
            android:id="@+id/imageView1"
            android:src="@drawable/logo_green"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_vertical" />

        <Button
            style="@style/PrimaryButton"
            android:id="@+id/signup_button"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup"

            android:layout_below="@+id/slogan"


            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:background="@layout/welcome_button"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="10px"
        >
        <ImageView
            android:layout_width="75px"
            android:layout_height="75px"
            android:id="@+id/imageView3"
            android:src="@drawable/logo_green"
            android:layout_centerHorizontal="true"

            />

    <Button
        style="@style/PrimaryButton"
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/login"


        android:background="@layout/welcome_button"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:textStyle="bold" />
    </LinearLayout>




    <com.google.android.gms.common.SignInButton
        android:id="@+id/signgoogle_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signgoogle"

       />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
    <TextView
        android:id="@+id/powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginTop="20px"
        android:text="@string/powered_by"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="240px"
        android:layout_height="180px"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:src="@drawable/oracle_logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="20px"
        android:layout_gravity="center_horizontal" />
    </RelativeLayout>

    <!--<TextView
        android:id="@+id/oracle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/powered_by"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/oracle"
        android:textAppearance="?android:attr/textAppearanceMedium" />-->



</LinearLayout>