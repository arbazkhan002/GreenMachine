<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="#efeff2">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        >
    </include>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/slogan"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_slogan"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:textSize="85px"
        android:textStyle="bold" />

    <Button
        style="@style/PrimaryButton"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/login"
        android:layout_below="@+id/slogan"
        android:layout_marginTop="90dp"
        android:layout_alignParentEnd="true"/>

    <Button
        style="@style/PrimaryButton"
        android:id="@+id/signup_button"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:layout_below="@+id/login_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signgoogle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/signup_button"
        android:text="@string/signgoogle" />

    <TextView
        android:id="@+id/powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="@string/powered_by"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/oracle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/powered_by"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/oracle"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>