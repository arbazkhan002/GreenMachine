<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gogreen.greenmachine.main.badges.BadgeActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Bike!"
        android:id="@+id/textView4"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:textColor="@color/primary_dark"/>

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/imageView2"
        android:src="@drawable/bike"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView2"
        android:progress="60"
        android:padding="30px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30/50 rides"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_alignParentEnd="true"
        android:paddingRight="30px"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Sneakers!"
        android:id="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:textColor="@color/primary_dark"
        android:layout_below="@+id/textView7"/>

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/imageView3"
        android:src="@drawable/sneakers"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView3"
        android:progress="20"
        android:padding="30px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5/25 gallons gas saved"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/progressBar2"
        android:layout_alignParentEnd="true"
        android:paddingRight="30px"/>


</RelativeLayout>
