<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gogreen.greenmachine.profile.ProfileBasicInfoActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>



    <EditText
        android:id="@+id/driving_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_driving"
        android:maxLines="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/car_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_car"
        android:maxLines="1"
        android:singleLine="true" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- ... XML CODE -->
        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="24dp"
            android:background="@color/primary_button"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/ic_launcher" />
    </RelativeLayout>

</LinearLayout>
